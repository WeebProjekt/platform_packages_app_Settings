<RelativeLayout
	android:id="@+id/weeb_about_phone"
	android:layout_gravity="center_vertical"
    android:gravity="center"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
    	android:id="@+id/weeb_device_image"
    	android:layout_width="120dp"
    	android:layout_height="250dp"
    	android:layout_marginTop="25dp"
    	android:layout_marginBottom="25dp"
    	android:src="@drawable/weeb_device"
    	android:antialias="true"
    	android:scaleType="fitXY"
    	android:layout_centerVertical="true"
    	android:contentDescription="@null"/>

    	<LinearLayout
    		android:gravity="center"
    		android:orientation="vertical"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginTop="10dp"
    		android:layout_marginBottom="10dp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="10dp"
    		android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/weeb_device_image">
        	<TextView
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:layout_marginTop="12dp"
        		android:text="@string/weeb_device_name"
        		style="@style/weeb_cardview_text_primary"/>
        	<TextView
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:layout_marginBottom="12dp"
        		android:text="@string/weeb_device_name_summary"
        		style="@style/weeb_cardview_text_secondary"/>
        	<TextView
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:text="@string/weeb_chipset_type"
        		style="@style/weeb_cardview_text_primary"/>
        	<TextView
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
       			android:layout_marginBottom="12dp"
        		android:text="@string/weeb_chipset_type_summary"
        		style="@style/weeb_cardview_text_secondary"/>
        	<TextView
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:text="@string/weeb_gpu"
        		style="@style/weeb_cardview_text_primary"/>
        	<TextView
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:layout_marginBottom="12dp"
        		android:text="@string/weeb_gpu_summary"
        		style="@style/weeb_cardview_text_secondary"/>
        	<TextView
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:text="@string/weeb_camera_mp"
        		style="@style/weeb_cardview_text_primary"/>
        	<TextView
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:layout_marginBottom="12dp"
        		android:text="@string/weeb_camera_mp_summary"
        		style="@style/weeb_cardview_text_secondary"/>
        	<TextView
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:text="@string/weeb_screen_type"
        		style="@style/weeb_cardview_text_primary"/>
        	<TextView
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:layout_marginBottom="12dp"
        		android:text="@string/weeb_screen_type_summary"
        		style="@style/weeb_cardview_text_secondary"/>
    	</LinearLayout>
</RelativeLayout>
